<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:compute="urn:import:org.openstack.ui.client.view.compute.widgets">
	<ui:style>
		
		.nav {
			border-right: 4px solid #E7E7E7;
			height: 100%;
			background-color: #F1F1F1;
		}
		
		.content {
			border: 4px solid #E7E7E7;
		}
		
		.m10 {
			margin: 10px;
		}
		
		.w100 {
			width: 100%;
		}
	</ui:style>

	<g:DockLayoutPanel styleName="{style.content}">
		<g:west size="180">
			<g:HTMLPanel styleName="{style.nav}">
				<compute:ComputeNavigation />
			</g:HTMLPanel>
		</g:west>
		<g:center>
			<g:SimpleLayoutPanel ui:field="content" />
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 